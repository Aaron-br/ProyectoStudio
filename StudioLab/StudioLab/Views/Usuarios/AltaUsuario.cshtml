@model StudioLab.Models.ViewModels.AltaUsuarioViewModel
@{
    ViewBag.Title = "AltaUsuario";
}

<h2>Alta de Usuarios</h2>


<!-- Formulario para la creación de usuarios -->

<div class="container">

    @using (Html.BeginForm())
    {
        <div class="form-group">
            @Html.LabelFor(model => model.Nombre) 
            @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", @placeholder = "Nombre"})
            @Html.ValidationMessageFor(model => model.Nombre) 
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Apellido1) 
            @Html.TextBoxFor(model => model.Apellido1, new { @class = "form-control", @placeholder = "Apellido1"})
            @Html.ValidationMessageFor(model => model.Apellido1)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Apellido2) 
            @Html.TextBoxFor(model => model.Apellido2, new { @class = "form-control", @placeholder = "Apellido2"})
            @Html.ValidationMessageFor(model => model.Apellido2)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Edad) 
            @Html.TextBoxFor(model => model.Edad, new { @class = "form-control", @placeholder = "Edad"})
            @Html.ValidationMessageFor(model => model.Edad)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Rol)
            @Html.TextBoxFor(model => model.Rol, new { @class = "form-control", @placeholder = "Rol"})
            @Html.ValidationMessageFor(model => model.Rol)
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>

    }

</div>
